{
  "labels": { "template": "aspnet-45-mongodb-ex" },
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "aspnet-45-mongodb-ex",
    "uid": "0016dc07-9728-11e5-be98-00155d00682e",
    "resourceVersion": "245",
    "creationTimestamp": "2016-01-15T12:02:56Z",
    "annotations": {
      "description": "An example ASP.NET 4.5 application with mongodb database",
      "iconClass": "icon-aspnet",
      "tags": "instant-app,aspnet,aspnet4.5,mongodb"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnet-45-mongodb-ex",
        "annotations": { "description": "Exposes and load balances the application pods" }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": { "name": "aspnet-45-mongodb-ex" }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": { "name": "aspnet-45-mongodb-ex" },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "kind": "Service",
          "name": "aspnet-45-mongodb-ex"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnet-45-mongodb-ex",
        "annotations": { "description": "Keeps track of changes in the application image" }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnet-45-mongodb-ex",
        "annotations": { "description": "Defines how to build the application" }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "DockerImage",
              "name": "click2cloud/aspnet-4.5-centos7:latest"
            },
            "forcePull": false,
            "incremental": true
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "aspnet-45-mongodb-ex:latest"
          }
        },
        "triggers": [
          { "type": "ImageChange" },
          {
            "type": "GitHub",
            "github": { "secret": "${GITHUB_WEBHOOK_SECRET}" }
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnet-45-mongodb-ex",
        "annotations": { "description": "Defines how to deploy the application server" }
      },
      "spec": {
        "strategy": { "type": "Rolling" },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [ "aspnet-45-mongodb-ex" ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "aspnet-45-mongodb-ex:latest"
              }
            }
          },
          { "type": "ConfigChange" }
        ],
        "replicas": 1,
        "selector": { "name": "aspnet-45-mongodb-ex" },
        "template": {
          "metadata": {
            "name": "aspnet-45-mongodb-ex",
            "labels": { "name": "aspnet-45-mongodb-ex" }
          },
          "spec": {
            "containers": [
              {
                "name": "aspnet-45-mongodb-ex",
                "image": "aspnet-45-mongodb-ex",
                "ports": [ { "containerPort": 5000 } ],
                "env": [
                  {
                    "name": "DATABASE_SERVICE_NAME",
                    "value": "${DATABASE_SERVICE_NAME}"
                  },
                  {
                    "name": "MONGODB_USER",
                    "value": "${DATABASE_USER}"
                  },
                  {
                    "name": "MONGODB_PASSWORD",
                    "value": "${DATABASE_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "value": "${DATABASE_NAME}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${DATABASE_ADMIN_PASSWORD}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DATABASE_SERVICE_NAME}",
        "annotations": { "description": "Exposes the database server" }
      },
      "spec": {
        "ports": [
          {
            "name": "mongodb",
            "port": 27017,
            "targetPort": 27017
          }
        ],
        "selector": { "name": "${DATABASE_SERVICE_NAME}" }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DATABASE_SERVICE_NAME}",
        "annotations": { "description": "Defines how to deploy the database" }
      },
      "spec": {
        "strategy": { "type": "Recreate" },
        "triggers": [ { "type": "ConfigChange" } ],
        "replicas": 1,
        "selector": { "name": "${DATABASE_SERVICE_NAME}" },
        "template": {
          "metadata": {
            "name": "${DATABASE_SERVICE_NAME}",
            "labels": { "name": "${DATABASE_SERVICE_NAME}" }
          },
          "spec": {
            "containers": [
              {
                "name": "mongodb",
                "image": "${MONGODB_IMAGE}",
                "ports": [ { "containerPort": 27017 } ],
                "env": [
                  {
                    "name": "MONGODB_USER",
                    "value": "${DATABASE_USER}"
                  },
                  {
                    "name": "MONGODB_PASSWORD",
                    "value": "${DATABASE_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "value": "${DATABASE_NAME}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${DATABASE_ADMIN_PASSWORD}"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/click2cloud/aspnet-45-ex.git",
      "from": null,
      "generate": null,
      "generator": null
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch",
      "from": null,
      "generate": null,
      "generator": null,
      "value": ""
    },
    {
      "name": "CONTEXT_DIR",
      "description": "Set this to the relative path to your project if it is not in the root of your repository",
      "from": null,
      "generate": null,
      "generator": null,
      "value": ""
    },
    {
      "name": "APPLICATION_DOMAIN",
      "description": "The exposed hostname that will route to the ASPNET service, if left blank a value will be defaulted.",
      "from": null,
      "generate": null,
      "generator": null,
      "value": ""
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "description": "A secret string used to configure the GitHub webhook",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "generator": null,
      "value": ""
    },
    {
      "name": "ASPNET_SECRET_TOKEN",
      "description": "Set this to a long random string",
      "generate": "expression",
      "from": "[\\w]{50}",
      "generator": null,
      "value": ""
    },
    {
      "name": "ASPNET_SECURITY_SALT",
      "description": "Security salt for session hash",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "generator": null,
      "value": ""
    },
    {
      "name": "ASPNET_SECURITY_CIPHER_SEED",
      "description": "Security cipher seed for session hash",
      "generate": "expression",
      "from": "[0-9]{30}",
      "generator": null,
      "value": ""
    },
    {
      "name": "OPCACHE_REVALIDATE_FREQ",
      "description": "The How often to check script timestamps for updates, in seconds. 0 will result in OPcache checking for updates on every request.",
      "value": "2",
      "from": null,
      "generate": null,
      "generator": null
    },
    {
      "name": "DATABASE_SERVICE_NAME",
      "description": "Database service name",
      "value": "mongodb",
      "from": null,
      "generate": null,
      "generator": null
    },
    {
      "name": "DATABASE_USER",
      "description": "Username for MongoDB user that will be used for accessing the database",
      "generate": "expression",
      "from": "user[A-Z0-9]{3}",
      "generator": null,
      "value": ""
    },
    {
      "name": "DATABASE_PASSWORD",
      "description": "Password for the MongoDB user",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "generator": null,
      "value": ""
    },
    {
      "name": "DATABASE_NAME",
      "description": "Database name",
      "value": "sampledb",
      "from": null,
      "generate": null,
      "generator": null
    },
    {
      "name": "DATABASE_ADMIN_PASSWORD",
      "description": "Password for the database admin user",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "generator": null,
      "value": ""
    },
    {
      "name": "MONGODB_IMAGE",
      "description": "Image to use for mongodb",
      "value": "openshift/mongodb-24-centos7",
      "from": null,
      "generate": null,
      "generator": null
    }
  ]

}
